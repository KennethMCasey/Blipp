<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ResetPasswordActivity"
    android:background="@color/blipp_medium">


    <TextView
        android:id="@+id/reset_opps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/reset_opps"
        android:textColor="@color/blipp_white"
        android:textSize="75sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="100dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


    <EditText
        android:autofillHints="@string/reset_email"
        android:id="@+id/reset_email"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/reset_opps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/reset_email"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/blipp_white"
        app:layout_constraintBottom_toTopOf="@id/reset_submit" />

    <Button
        android:id="@+id/reset_submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        android:text="@string/reset_reset"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/reset_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/blipp_white" />

</androidx.constraintlayout.widget.ConstraintLayout>