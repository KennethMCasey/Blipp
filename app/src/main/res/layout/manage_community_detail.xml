<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blipp_medium">


    <TextView
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="20dp"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintHeight_min="70dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="spread"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/blipp_grey"
        android:id="@+id/community_manage_detail_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/community_manage_detail_info"
        android:text="Community Managment"
        />

    <TextView
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="20dp"
        app:layout_constraintHeight_max="400dp"
        android:textColor="@color/blipp_grey"
        app:layout_constraintHeight_min="30dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="1dp"
        android:id="@+id/community_manage_detail_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Change NickName"
        app:layout_constraintTop_toBottomOf="@id/community_manage_detail_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/community_manage_detail_name"/>

    <EditText
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="20dp"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintHeight_min="70dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="spread"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/community_manage_detail_name"
        android:textColor="@color/blipp_grey"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/community_manage_detail_info"
        app:layout_constraintBottom_toTopOf="@id/community_manage_detail_submit"/>

    <Button
        android:id="@+id/community_manage_detail_submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/community_manage_detail_name"
        app:layout_constraintBottom_toTopOf="@id/community_manage_detail_active_btn"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="40dp"
        app:layout_constraintHeight_max="100dp"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/community_manage_detail_active_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Active Members"

        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="40dp"
        app:layout_constraintHeight_max="100dp"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/community_manage_detail_submit"
        app:layout_constraintBottom_toTopOf="@id/community_manage_detail_banned_btn"/>

    <Button
        android:id="@+id/community_manage_detail_banned_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Banned Members"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/community_manage_detail_active_btn"
        app:layout_constraintBottom_toTopOf="@id/community_manage_detail_joinable_button"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="40dp"
        app:layout_constraintHeight_max="100dp"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/community_manage_detail_joinable_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Toggle Joinable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/community_manage_detail_banned_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_min="40dp"
        app:layout_constraintHeight_max="100dp"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>