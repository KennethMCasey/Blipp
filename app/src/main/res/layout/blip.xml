<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blip"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/blip_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_min="80dp"
        app:layout_constraintHeight_min="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="left"
        ></TextView>

    <ImageView
        android:id="@+id/blip_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="800dp"
        app:layout_constraintHeight_max="500dp"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintWidth_min="80dp"
        app:layout_constraintHeight_min="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/blip_text"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:srcCompat="@tools:sample/avatars[1]" />

    <TextView
        android:id="@+id/blip_text"
        android:textSize="16sp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_min="30dp"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintWidth_max="1000dp"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintTop_toBottomOf="@id/blip_photo"
        app:layout_constraintBottom_toTopOf="@id/blip_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/blipp_black"
        android:text="TextView" />

    <RelativeLayout
        android:id="@+id/blip_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_min="30dp"
        app:layout_constraintHeight_min="35dp"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/blip_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/blip_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:text="LIKE"></Button>

        <TextView
            android:id="@+id/blip_num_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:layout_gravity="top"
            android:text="num likes"></TextView>

        <Button
            android:id="@+id/blip_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="DISLIKE"></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>