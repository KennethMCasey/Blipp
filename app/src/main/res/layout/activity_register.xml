<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.LoginActivity"
    android:background="@color/blipp_medium">


    <TextView
        android:id="@+id/register_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="800dp"
        app:layout_constraintHeight_max="200dp"
        app:layout_constraintWidth_min="400dp"
        app:layout_constraintHeight_min="50dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Please Enter Your Information"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        ></TextView>


    <EditText
        android:id="@+id/register_email"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/register_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:hint="email"
        android:background="@color/blipp_offset"
        >
    </EditText>

    <EditText
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        android:id="@+id/register_password"
        android:hint="password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/register_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_password_confirm"
        android:background="@color/blipp_offset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
    </EditText>

    <EditText
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        android:id="@+id/register_password_confirm"
        android:hint="Retype Password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/register_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_name"
        android:background="@color/blipp_offset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
    </EditText>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/register_password_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_phone"
        android:background="@color/blipp_offset"
        android:id="@+id/register_name"
        android:hint="name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
    </EditText>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_constraintHeight_min="45dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/register_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/register_btn_submit"
        android:id="@+id/register_phone"
        android:hint="phone number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blipp_offset"
        >
    </EditText>


    <Button
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintWidth_max="150dp"
        app:layout_constraintHeight_max="50dp"
        app:layout_constraintWidth_min="75dp"
        app:layout_constraintHeight_min="25dp"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintTop_toBottomOf="@id/register_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/register_btn_submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blipp_white"
        android:text="Submit" />

</androidx.constraintlayout.widget.ConstraintLayout>